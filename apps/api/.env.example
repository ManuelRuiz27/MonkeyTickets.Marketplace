# Environment
NODE_ENV=development

# Server
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Redis (reservas de tickets y colas Bull)
REDIS_URL=redis://localhost:6379

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/monomarket_tickets?schema=public"

# Seeding
RUN_SEED=false
PRISMA_MIGRATE_MODE=auto
MIGRATE_RETRY_COUNT=5
MIGRATE_RETRY_DELAY_SECONDS=3

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Payment Gateways
CONEKTA_SECRET_KEY=your-conekta-secret-key
CONEKTA_PUBLIC_KEY=your-conekta-public-key
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
# Mercado Pago


# Email (Example: using SendGrid or similar)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
EMAIL_FROM=noreply@monomarket-tickets.com

# Logging
LOG_LEVEL=info
