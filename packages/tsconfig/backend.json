{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "node"
        ]
    }
}