# ================================
# Database
# ================================
DATABASE_URL="postgresql://user:password@localhost:5432/monomarket_db"

# ================================
# JWT Authentication
# ================================
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# ================================
# Redis (Cache & Queues)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# Email Service (SendGrid, Mailgun, etc)
# ================================
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@monotickets.com
EMAIL_API_KEY=your_email_api_key_here

# ================================
# OpenPay - Payment Gateway (SPEI/OXXO/Tarjeta)
# ================================

# Merchant ID (Dashboard OpenPay > Configuración > Claves)
OPENPAY_MERCHANT_ID=mzpzdjiqidmi2zhtjeme

# API Key - Clave privada (sk_xxxxx para producción)
OPENPAY_API_KEY=sk_your_private_key_here

# Modo: false para producción, true para sandbox/testing
OPENPAY_SANDBOX=false

# Webhook Secret (Dashboard > Webhooks > Shared Secret)
# Se genera al crear el webhook con URL: https://tu-dominio.com/payments/webhooks/openpay
OPENPAY_WEBHOOK_SECRET=https://sandbox-api.openpay.mx/v1/

# ================================
# Application
# ================================
NODE_ENV=production
PORT=3000
APP_URL=https://tu-dominio.com

# ================================
# CORS
# ================================
CORS_ORIGIN=https://tu-dominio.com,http://localhost:5173

# ================================
# File Upload
# ================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
